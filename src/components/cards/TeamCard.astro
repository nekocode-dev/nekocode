---
/**
 * TeamCard - Team member display with optimized images
 */
import { Image } from 'astro:assets';

// Dynamic image imports for team avatars
const teamImages = import.meta.glob<{ default: ImageMetadata }>('/src/assets/team/*.png', { eager: true });

interface Props {
  name: string;
  role: string;
  bio: string;
  avatar?: string;
  links?: {
    github?: string;
    linkedin?: string;
    website?: string;
  };
  class?: string;
}

const {
  name,
  role,
  bio,
  avatar,
  links,
  class: className = ''
} = Astro.props;

const isNeko = name.toLowerCase().includes('nekocode');

// Map public path to src/assets path for optimization
function getOptimizedImage(publicPath: string | undefined) {
  if (!publicPath) return null;
  // Convert /assets/team/image.png to /src/assets/team/image.png
  const srcPath = publicPath.replace('/assets/', '/src/assets/');
  return teamImages[srcPath]?.default || null;
}

const optimizedAvatar = getOptimizedImage(avatar);
const initials = name.split(' ').map(n => n[0]).join('').toUpperCase();
---

<div class:list={['team-card', 'glass', className, { 'is-neko': isNeko }]}>
  <div class="avatar">
    {optimizedAvatar ? (
      <Image 
        src={optimizedAvatar} 
        alt={name} 
        width={250} 
        height={250}
        format="webp"
        quality={80}
        loading="lazy"
      />
    ) : avatar ? (
      <img src={avatar} alt={name} loading="lazy" />
    ) : (
      <span class="initials">{initials}</span>
    )}
  </div>

  
  <div class="info">
    <h3 class="name">{name}</h3>
    <p class="role">{role}</p>
    <p class="bio">{bio}</p>
    
    {links && (
      <div class="links">
        {links.github && (
          <a href={links.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
