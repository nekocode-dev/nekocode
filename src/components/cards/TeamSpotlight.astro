---
/**
 * TeamSpotlight - Premium 2026 Team Cards
 * Uses unified TeamCard component for consistency
 */
import { getCollection } from 'astro:content';
import TeamCard from './TeamCard.astro';

const allTeamMembers = await getCollection('team');
const teamMembers = allTeamMembers.sort((a, b) => (a.data.order || 99) - (b.data.order || 99));
---

<section class="team-spotlight">
  <div class="spotlight-header">
    <span class="section-eyebrow">Our Crew</span>
    <h2 class="text-title-2">Meet the Team</h2>
    <p class="spotlight-subtitle">The creative minds behind NekoCode</p>
  </div>
  
  <div class="team-grid">
    {teamMembers.map(member => (
      <TeamCard
        name={member.data.name}
        role={member.data.role}
        bio={member.data.bio}
        avatar={member.data.avatar}
        links={member.data.links}
        class="glass-card"
      />
    ))}
  </div>
</section>

<style>
  .team-spotlight {
    padding: var(--space-16) 0;
  }
  
  .spotlight-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }
  
  .section-eyebrow {
    display: inline-block;
    padding: var(--space-1) var(--space-4);
    background: rgba(var(--color-accent-rgb, 193, 154, 107), 0.15);
    border: 1px solid rgba(var(--color-accent-rgb, 193, 154, 107), 0.3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: var(--space-4);
  }
  
  .spotlight-header h2 {
    margin-bottom: var(--space-2);
  }
  
  .spotlight-subtitle {
    color: var(--color-muted);
    font-size: var(--text-lg);
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-8);
  }
  
  /* Responsive */
  @media (max-width: 480px) {
    .team-grid {
      grid-template-columns: 1fr;
    }
  }
  
  /* ===== Light Mode Overrides ===== */
  [data-theme="light"] .section-eyebrow {
    background: rgba(139, 90, 43, 0.12);
    border-color: rgba(139, 90, 43, 0.25);
    color: #7a4f2a;
  }
</style></style>
