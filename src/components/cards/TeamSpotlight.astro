---
/**
 * TeamSpotlight - Premium 2026 Team Cards
 * Liquid glass aesthetic with frosted backgrounds, gradient rings, and micro-animations
 */
import { getCollection } from 'astro:content';

const allTeamMembers = await getCollection('team');
const teamMembers = allTeamMembers.sort((a, b) => (a.data.order || 99) - (b.data.order || 99));
const base = import.meta.env.BASE_URL;
---

<section class="team-spotlight">
  <div class="spotlight-header">
    <span class="section-eyebrow">Our Crew</span>
    <h2 class="text-title-2">Meet the Team</h2>
    <p class="spotlight-subtitle">The creative minds behind NekoCode</p>
  </div>
  
  <div class="team-grid">
    {teamMembers.map(member => (
      <article class="team-card glass-card">
        <!-- Avatar with gradient ring -->
        <div class="avatar-wrapper">
          <div class="avatar-glow"></div>
          <div class="avatar-ring">
            <div class="avatar-inner">
              <img 
                src={member.data.avatar?.startsWith('/') ? `${base}${member.data.avatar.slice(1)}` : member.data.avatar || `${base}favicon.svg`}
                alt={member.data.name}
                width="120"
                height="120"
                loading="lazy"
              />
            </div>
          </div>
        </div>
        
        <!-- Content -->
        <div class="card-content">
          <!-- Badge -->
          <span class="member-badge">{member.data.badge || member.data.role}</span>
          
          <!-- Name & Role -->
          <h3 class="member-name">{member.data.name}</h3>
          <div class="role-tag">
            <span class="role-icon">âœ¦</span>
            <span>{member.data.role}</span>
          </div>
          
          <!-- Bio -->
          <p class="member-bio">{member.data.bio}</p>
          
          <!-- Skills -->
          {member.data.skills && member.data.skills.length > 0 && (
            <div class="skills-row">
              {member.data.skills.slice(0, 4).map(skill => (
                <span class="skill-tag">{skill}</span>
              ))}
            </div>
          )}
          
          <!-- Social Links -->
          <div class="social-links">
            {member.data.links?.twitter && (
              <a href={member.data.links.twitter} target="_blank" rel="noopener noreferrer" aria-label="Twitter" class="social-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            )}
            {member.data.links?.github && (
              <a href={member.data.links.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="social-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      </article>
    ))}
  </div>
</section>

<style>
  .team-spotlight {
    padding: var(--space-16) 0;
  }
  
  .spotlight-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }
  
  .section-eyebrow {
    display: inline-block;
    padding: var(--space-1) var(--space-4);
    background: rgba(var(--color-accent-rgb, 193, 154, 107), 0.15);
    border: 1px solid rgba(var(--color-accent-rgb, 193, 154, 107), 0.3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: var(--space-4);
  }
  
  .spotlight-header h2 {
    margin-bottom: var(--space-2);
  }
  
  .spotlight-subtitle {
    color: var(--color-muted);
    font-size: var(--text-lg);
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-8);
    max-width: 900px;
    margin-inline: auto;
  }
  
  /* Glass Card Base */
  .glass-card {
    position: relative;
    text-align: center;
    padding: var(--space-8) var(--space-6);
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-2xl);
    box-shadow: 
      0 4px 32px rgba(0, 0, 0, 0.12),
      0 2px 8px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }
  
  .glass-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.06) 0%,
      transparent 50%,
      rgba(255, 255, 255, 0.02) 100%
    );
    pointer-events: none;
  }
  
  .glass-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: rgba(var(--color-accent-rgb, 193, 154, 107), 0.4);
    box-shadow: 
      0 20px 60px rgba(var(--color-accent-rgb, 193, 154, 107), 0.15),
      0 8px 24px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }
  
  /* Light mode adjustments */
  [data-theme="light"] .glass-card {
    background: rgba(255, 255, 255, 0.7);
    border-color: rgba(0, 0, 0, 0.08);
    box-shadow: 
      0 4px 32px rgba(0, 0, 0, 0.08),
      0 2px 8px rgba(0, 0, 0, 0.04),
      inset 0 1px 0 rgba(255, 255, 255, 0.8);
  }
  
  [data-theme="light"] .glass-card::before {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.8) 0%,
      transparent 50%,
      rgba(255, 255, 255, 0.4) 100%
    );
  }
  
  [data-theme="light"] .glass-card:hover {
    background: rgba(255, 255, 255, 0.85);
    box-shadow: 
      0 20px 60px rgba(var(--color-accent-rgb, 193, 154, 107), 0.2),
      0 8px 24px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 1);
  }
  
  /* Avatar System */
  .avatar-wrapper {
    position: relative;
    display: inline-block;
    margin-bottom: var(--space-5);
  }
  
  .avatar-glow {
    position: absolute;
    inset: -12px;
    background: radial-gradient(
      circle,
      rgba(var(--color-accent-rgb, 193, 154, 107), 0.3) 0%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }
  
  .glass-card:hover .avatar-glow {
    opacity: 1;
  }
  
  .avatar-ring {
    position: relative;
    width: 128px;
    height: 128px;
    padding: 4px;
    background: linear-gradient(
      135deg,
      var(--color-accent) 0%,
      rgba(var(--color-accent-rgb, 193, 154, 107), 0.6) 50%,
      var(--color-accent) 100%
    );
    background-size: 200% 200%;
    border-radius: 50%;
    transition: all 0.4s ease;
  }
  
  .glass-card:hover .avatar-ring {
    background-position: 100% 100%;
    box-shadow: 0 0 40px rgba(var(--color-accent-rgb, 193, 154, 107), 0.4);
    transform: scale(1.05);
  }
  
  .avatar-inner {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
    background: var(--color-bg);
  }
  
  .avatar-inner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  
  .glass-card:hover .avatar-inner img {
    transform: scale(1.1);
  }
  
  /* Badge */
  .member-badge {
    display: inline-block;
    padding: var(--space-1) var(--space-4);
    background: linear-gradient(
      135deg,
      rgba(var(--color-accent-rgb, 193, 154, 107), 0.2) 0%,
      rgba(var(--color-accent-rgb, 193, 154, 107), 0.1) 100%
    );
    backdrop-filter: blur(8px);
    border: 1px solid rgba(var(--color-accent-rgb, 193, 154, 107), 0.3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-accent);
    margin-bottom: var(--space-3);
  }
  
  .member-name {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 var(--space-2);
    letter-spacing: -0.02em;
  }
  
  /* Role Tag */
  .role-tag {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-1) var(--space-3);
    background: rgba(var(--color-accent-rgb, 193, 154, 107), 0.08);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-accent);
    margin-bottom: var(--space-4);
  }
  
  .role-icon {
    font-size: 10px;
    opacity: 0.8;
  }
  
  .member-bio {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin: 0 0 var(--space-5);
    max-width: 280px;
    margin-inline: auto;
  }
  
  /* Skills */
  .skills-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-2);
    margin-bottom: var(--space-5);
  }
  
  .skill-tag {
    padding: var(--space-1) var(--space-3);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-full);
    font-size: 11px;
    font-weight: 500;
    color: var(--color-text-secondary);
    transition: all 0.3s ease;
  }
  
  .skill-tag:hover {
    background: rgba(var(--color-accent-rgb, 193, 154, 107), 0.15);
    border-color: rgba(var(--color-accent-rgb, 193, 154, 107), 0.3);
    color: var(--color-accent);
  }
  
  [data-theme="light"] .skill-tag {
    background: rgba(0, 0, 0, 0.04);
    border-color: rgba(0, 0, 0, 0.08);
  }
  
  /* Social Links */
  .social-links {
    display: flex;
    justify-content: center;
    gap: var(--space-3);
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    color: var(--color-text-secondary);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .social-link:hover {
    background: rgba(var(--color-accent-rgb, 193, 154, 107), 0.15);
    border-color: var(--color-accent);
    color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--color-accent-rgb, 193, 154, 107), 0.2);
  }
  
  [data-theme="light"] .social-link {
    background: rgba(0, 0, 0, 0.04);
    border-color: rgba(0, 0, 0, 0.08);
  }
  
  /* Responsive */
  @media (max-width: 480px) {
    .team-grid {
      grid-template-columns: 1fr;
    }
    
    .glass-card {
      padding: var(--space-6);
    }
    
    .member-name {
      font-size: var(--text-xl);
    }
  }
  
  /* ===== Light Mode Overrides ===== */
  [data-theme="light"] .section-eyebrow {
    background: rgba(139, 90, 43, 0.12);
    border-color: rgba(139, 90, 43, 0.25);
    color: #7a4f2a;
  }
  
  [data-theme="light"] .member-badge {
    background: linear-gradient(135deg, rgba(139, 90, 43, 0.15) 0%, rgba(139, 90, 43, 0.08) 100%);
    border-color: rgba(139, 90, 43, 0.3);
    color: #6b4423;
  }
  
  [data-theme="light"] .role-tag {
    background: rgba(139, 90, 43, 0.1);
    color: #7a4f2a;
  }
  
  [data-theme="light"] .role-icon {
    opacity: 1;
  }
  
  [data-theme="light"] .member-bio {
    color: #555;
  }
  
  [data-theme="light"] .skill-tag {
    background: rgba(0, 0, 0, 0.05);
    border-color: rgba(0, 0, 0, 0.12);
    color: #555;
  }
  
  [data-theme="light"] .skill-tag:hover {
    background: rgba(139, 90, 43, 0.12);
    border-color: rgba(139, 90, 43, 0.3);
    color: #6b4423;
  }
  
  [data-theme="light"] .social-link {
    background: rgba(0, 0, 0, 0.05);
    border-color: rgba(0, 0, 0, 0.12);
    color: #666;
  }
  
  [data-theme="light"] .social-link:hover {
    background: rgba(139, 90, 43, 0.12);
    border-color: #8b5a2b;
    color: #6b4423;
  }
  
  [data-theme="light"] .avatar-ring {
    background: linear-gradient(135deg, #a67c4e 0%, #c9a66b 50%, #a67c4e 100%);
  }
</style>
