---
interface Props {
  as?: 'div' | 'section' | 'article' | 'aside' | 'header' | 'footer' | 'main';
  size?: 'default' | 'narrow' | 'wide';
  class?: string;
}

const { 
  as: Element = 'div', 
  size = 'default',
  class: className = ''
} = Astro.props;

const sizeClass = {
  default: '',
  narrow: 'container-narrow',
  wide: 'container-wide'
}[size];
---

<Element class:list={['container', sizeClass, className]}>
  <slot />
</Element>

<style>
  .container {
    width: 100%;
    max-width: var(--container-max);
    margin-inline: auto;
    padding-inline: var(--space-6);
  }
  
  .container-narrow {
    max-width: var(--container-narrow);
  }
  
  .container-wide {
    max-width: 1440px;
  }
  
  @media (max-width: 640px) {
    .container {
      padding-inline: var(--space-4);
    }
  }
</style>
