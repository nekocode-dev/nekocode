---
import BaseLayout from '@/layouts/BaseLayout.astro';
import NavBar from '@/components/nav/NavBar.astro';
import Footer from '@/components/nav/Footer.astro';
import Container from '@/components/layout/Container.astro';
import Section from '@/components/layout/Section.astro';
import Button from '@/components/ui/Button.astro';
---

<BaseLayout title="About" description="Learn more about NekoCode and how we build">
  <NavBar slot="header" />
  
  <Section size="lg">
    <Container size="narrow">
      <h1 class="text-title-1">About</h1>
      
      <div class="about-content">
        <section class="about-section">
          <h2 class="text-title-2">Who I Am</h2>
          <p>
            I am a builder who believes in shipping things that matter. Products should solve real problems, 
            feel intuitive to use, and be built with care. No bloat, no unnecessary complexity.
          </p>
          <p>
            I work across the full stack - from product strategy to pixel-perfect UI to shipping code. 
            Every project on this site represents that end-to-end thinking.
          </p>
        </section>
        
        <section class="about-section">
          <h2 class="text-title-2">How I Build</h2>
          <div class="process-grid">
            <div class="process-step">
              <span class="step-number">01</span>
              <h3>Understand</h3>
              <p>Start with the problem. Who is this for? What does success look like?</p>
            </div>
            <div class="process-step">
              <span class="step-number">02</span>
              <h3>Design</h3>
              <p>Sketch solutions. Prototype fast. Get feedback early.</p>
            </div>
            <div class="process-step">
              <span class="step-number">03</span>
              <h3>Build</h3>
              <p>Write clean code. Test thoroughly. Ship incrementally.</p>
            </div>
            <div class="process-step">
              <span class="step-number">04</span>
              <h3>Iterate</h3>
              <p>Learn from usage. Refine continuously. Never settle.</p>
            </div>
          </div>
        </section>
        
        <section class="about-section">
          <h2 class="text-title-2">Tech Stack</h2>
          <div class="stack-grid">
            <div class="stack-category">
              <h3>Mobile</h3>
              <ul>
                <li>Flutter / Dart</li>
                <li>SwiftUI</li>
                <li>Kotlin</li>
              </ul>
            </div>
            <div class="stack-category">
              <h3>Web</h3>
              <ul>
                <li>TypeScript</li>
                <li>Astro / Next.js</li>
                <li>CSS / Tailwind</li>
              </ul>
            </div>
            <div class="stack-category">
              <h3>Backend</h3>
              <ul>
                <li>Supabase</li>
                <li>PostgreSQL</li>
                <li>Edge Functions</li>
              </ul>
            </div>
            <div class="stack-category">
              <h3>Tools</h3>
              <ul>
                <li>Figma</li>
                <li>Git / GitHub</li>
                <li>VS Code</li>
              </ul>
            </div>
          </div>
        </section>
        
        <section class="about-section values">
          <h2 class="text-title-2">Values</h2>
          <ul class="values-list">
            <li><strong>Clarity over cleverness.</strong> Code should be readable. Design should be obvious.</li>
            <li><strong>Ship over perfect.</strong> Done is better than perfect. Iterate from there.</li>
            <li><strong>Privacy as default.</strong> User data belongs to users.</li>
            <li><strong>Craft matters.</strong> The details are not just details. They make the product.</li>
          </ul>
        </section>
        
        <div class="cta-block">
          <Button href="/contact" variant="accent" size="lg">
            Get in Touch
          </Button>
        </div>
      </div>
    </Container>
  </Section>
  
  <Footer slot="footer" />
</BaseLayout>

<style>
  h1 {
    margin-bottom: var(--space-10);
  }
  
  .about-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
  }
  
  .about-section h2 {
    margin-bottom: var(--space-6);
  }
  
  .about-section p {
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
  }
  
  .process-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
  }
  
  .process-step {
    padding: var(--space-5);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
  }
  
  .step-number {
    display: block;
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
    background: var(--color-accent);
    color: var(--color-accent-contrast);
    width: 28px;
    height: 28px;
    line-height: 28px;
    text-align: center;
    border-radius: var(--radius-full);
    margin-bottom: var(--space-3);
  }
  
  .process-step h3 {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: 600;
    margin-bottom: var(--space-2);
  }
  
  .process-step p {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }
  
  .stack-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: var(--space-6);
  }
  
  .stack-category h3 {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-muted);
    margin-bottom: var(--space-3);
  }
  
  .stack-category ul {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .stack-category li {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }
  
  .values-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }
  
  .values-list li {
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
  }
  
  .values-list strong {
    color: var(--color-text);
  }
  
  .cta-block {
    text-align: center;
    padding-top: var(--space-8);
  }
</style>
