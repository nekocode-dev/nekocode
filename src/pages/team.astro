---
import BaseLayout from '@/layouts/BaseLayout.astro';
import NavBar from '@/components/nav/NavBar.astro';
import Footer from '@/components/nav/Footer.astro';
import Container from '@/components/layout/Container.astro';
import Section from '@/components/layout/Section.astro';
import TeamCard from '@/components/cards/TeamCard.astro';
import { getCollection } from 'astro:content';

const allTeamMembers = await getCollection('team');
const teamMembers = allTeamMembers.sort((a, b) => (a.data.order || 99) - (b.data.order || 99));
---

<BaseLayout title="Team" description="Meet the team behind NekoCode">
  <NavBar slot="header" />
  
  <Section size="lg">
    <Container>
      <div class="page-header">
        <h1 class="text-title-1">Team</h1>
        <p class="page-description">
          The people behind the projects. We believe in craft, clarity, and shipping things that matter.
        </p>
      </div>
      
      <div class="team-grid">
        {teamMembers.map(member => (
          <TeamCard
            name={member.data.name}
            role={member.data.role}
            bio={member.data.bio}
            avatar={member.data.avatar}
            links={member.data.links}
          />
        ))}
      </div>
      
      <!-- Collaboration -->
      <div class="collab-section">
        <h2 class="text-title-2">Ways to Collaborate</h2>
        <div class="collab-grid">
          <div class="collab-card">
            <span class="collab-icon">ü§ù</span>
            <h3>Contract Work</h3>
            <p>Need help building an app or website? Let's talk scope and timeline.</p>
          </div>
          <div class="collab-card">
            <span class="collab-icon">üåø</span>
            <h3>Open Source</h3>
            <p>Contributions welcome on all public repositories.</p>
          </div>
          <div class="collab-card">
            <span class="collab-icon">üí¨</span>
            <h3>Consulting</h3>
            <p>Product strategy, code review, or architecture feedback.</p>
          </div>
        </div>
      </div>
    </Container>
  </Section>
  
  <Footer slot="footer" />
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--space-10);
    text-align: center;
  }
  
  .page-header h1 {
    margin-bottom: var(--space-3);
  }
  
  .page-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 560px;
    margin-inline: auto;
  }
  
  .team-grid {
    display: grid;
    gap: var(--space-6);
    max-width: 800px;
    margin-inline: auto;
  }
  
  .collab-section {
    margin-top: var(--space-20);
    padding-top: var(--space-16);
    border-top: 1px solid var(--color-border);
  }
  
  .collab-section h2 {
    text-align: center;
    margin-bottom: var(--space-10);
  }
  
  .collab-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: var(--space-6);
  }
  
  .collab-card {
    padding: var(--space-6);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-align: center;
    transition: all var(--duration-normal) var(--ease-out);
  }
  
  .collab-card:hover {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-md);
  }
  
  .collab-icon {
    font-size: var(--text-4xl);
    display: block;
    margin-bottom: var(--space-4);
  }
  
  .collab-card h3 {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: 600;
    margin-bottom: var(--space-2);
  }
  
  .collab-card p {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }
</style>
