{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@content/*": [
                "src/content/*"
            ],
            "@lib/*": [
                "src/lib/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "astro"
    },
    "include": [
        "src/**/*",
        "astro.config.mjs"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}